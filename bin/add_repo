#!/usr/bin/perl

use strict;
use warnings;

use PerlDiver::Repo;
use PerlDiver::Schema;

die unless @ARGV;

my $arg = shift @ARGV;
$arg =~ s/\.git$//;

my $repo = PerlDiver::Repo->new(uri => $arg);

my $sch = PerlDiver::Schema->get_schema;

my $rs = $sch->resultset('Repo');

$rs->create({
  uri => $repo->uri,
  owner => $repo->owner,
  name => $repo->name,
});
